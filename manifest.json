{
  "manifest_version": 2,

  "name": "TOTAL BLOCKage",
  "description": "Website & application tracker.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/util.js",
      "js/ajax.js",
      "js/globals.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "icons": { "16": "icon_016.png",
           "48": "icon_048.png",
          "128": "icon_128.png" },
  "permissions": [
    "tabs",
    "activeTab",
     "history",
     "storage",
     "background"
  ]
}